{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "C/C++: g++.exe build active file",
            "command": "g++",
            "args": [
                "-std=c++23",
                "-O2",
                "-Wall",
                "-g",
                "E:/C++/Projects/NEAT/main.cpp",
                "-o",
                "E:/C++/Projects/NEAT/main.exe",
                "-I",
                "E:/C++/Tools/Custom_Libraries"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "isDefault": true,
                "kind": "build"
            }
        }
    ]
}